{% extends 'base.html.twig' %}
{% block title %}Liste de Produit!{% endblock %}

{% block body %}




<div class="container">


<table class="table table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Prix</th>
         <th>Modifier</th>
         
      </tr>
    </thead>
    <tbody>
    	{% for produit in produit %}
      <tr>
        <td>{{ produit.name}}</td>
        <td>{{ produit.description}}</td>
        <td>{{ produit.price}}</td> 
        <td class="btn btn-success"> <a href="{{ path('produit_edit' ,{'id':produit.id}) }}"> modifier </a> </td>  
 		<td class=" btn btn-danger""> <a href="{{ path('produit_delete' ,{'id':produit.id}) }}">supprimer </a> </td>
 	  
       </tr>
      {% endfor %}

    </tbody>
  </table>




</div>
{% endblock %}
